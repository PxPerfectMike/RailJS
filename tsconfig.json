{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2015", "ES2020", "DOM"],
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": false,
		"noEmit": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["rail.d.ts", "rail.js"],
	"exclude": ["node_modules", "**/*.test.js", "test.js", "demo.js", "build.js", "benchmark.js"]
}
